#include<stdio.h>
void pa(int a[],int s ,int e){
	for (int i=s;i<=e;i++){
		printf("%d ",a[i]);}
	printf("\n");
	
}


int partition(int a[],int l,int h){
	int pivot=a[h];
	int i=l-1,temp;
	for(int j=l;j<h;j++){
		if(a[j]<pivot){
			i++;
			temp=a[i];
			a[i]=a[j];
			a[j]=temp;
		}
	}
	temp=a[i+1];
	a[i+1]=a[h];
	a[h]=temp;
	return i+1;
}


void quick(int a[],int l, int h){
	if(l<h){
		int pi=partition(a,l,h);
		printf("Pass: ");
		pa(a,l,h);
		quick(a,l,pi-1);
		quick(a,pi+1,h);
	}
}

void main(){
	int a[100],n;
	printf("number of elements: ");
	scanf("%d",&n);
	printf("elements: ");
	for(int i=0;i<n;i++){
		scanf("%d ",&a[i]);}
	printf("Original array: ");
	for(int i=0;i<n;i++){
		printf("%d ",a[i]);}
	printf("\n");

	quick(a,0,n-1);
	printf("Sorted array: ");
	for(int i=0;i<n;i++){
		printf("%d ",a[i]);
	}
	printf("\n");
	}

#include<stdio.h>
void read1(int a[], int n){
	printf("Enter %d elements : ",n);
	for(int j=0;j<n;j++){
		scanf("%d", &a[j]);
	}
}
void bubbleSort(int a[], int n){
	for(int i=0;i<n-1;i++){
		for(int j=0;j<n-i-1;j++){
			if (a[j]>a[j+1]){
				int t=a[j];
				a[j]=a[j+1];
				a[j+1]=t;
			}
		}
	}
}

void display(int a[],int n){
	for (int i=0;i<n;i++){
		printf("%d ",a[i]);
	}
	printf("\n");
}
int binarySearch(int a[],int l,int h,int key){
	if(l>h){
		return -1;
	}
	int m=(l+h)/2;
	if (a[m]==key){
		return m;
	}
	else if(key<a[m]){
		return binarySearch(a,l,m-1,key);
	}
